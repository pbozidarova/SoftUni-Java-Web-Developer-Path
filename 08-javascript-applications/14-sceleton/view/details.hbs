{{>header}}

<!-- Details -->
<div class="container details">
    <div class="details-content">
        <h2>{{element.title}}</h2>
        <strong>{{element.category}}</strong>
        <p>{{element.content}}</p>
        <div class="buttons">
            {{#if canEdit}}
            <a href="/delete/{{element._id}}" class="btn delete">Delete</a>
            <a href="/edit/{{element._id}}" class="btn edit">Edit</a>
            {{/if}}
            <a href="/home" class="btn edit">Back</a>
        </div>
    </div>
</div>

